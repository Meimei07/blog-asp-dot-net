@page
@model BlogPost.Pages.Tag.CreateModel
@{
    ViewData["Title"] = "Create Tag";
}

<div class="container my-5">
    <div class="row">
        <div class="d-flex justify-content-between mb-2">
            <h3>Create Tag</h3>
            <a class="btn btn-success" asp-page="/Tag/Index" role="button">Back</a>
        </div>
        <!-- Blog entries-->
        <div class="col-lg-12">
            <div class="card p-3">
                <form method="POST">
                    <div class="mb-3">
                        <label asp-for="Tag.Name" class="form-label">Tag</label>
                        <input asp-for="Tag.Name" type="text" class="form-control" />
                        <span asp-validation-for="Tag.Name" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
